<div class="register-container">
<div class="small-container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field my-4">
        <%= f.text_field :name, placeholder: "Full Name", class: "input-field" %>
      </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "input-field last-field" %>
  </div>
  <div>
    <%= f.submit class: "from-submit-btn" %>
    </div>
<% end %>
<%# <%= render "devise/shared/links" %> 
</div>
</div>